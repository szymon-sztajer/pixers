<div class="row-fluid" >
    <div class="col-md-offset-4 col-md-4" id="box">
        <h2>Contact Us!</h2>

        <hr>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form) }}

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-tag"></i></span>
                {{ form_widget(form.subject) }}
            </div>
            <div class="validation-error">
                {{ form_errors(form.subject) }}
            </div>
        </div>

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                {{ form_widget(form.email) }}
            </div>
            <div class="validation-error">
                {{ form_errors(form.email) }}
            </div>
        </div>


        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                {{ form_widget(form.message) }}
            </div>
            <div class="validation-error">
                {{ form_errors(form.message) }}
            </div>
        </div>

        {# Render CSRF token etc .#}
        <div style="display:none">
            {{ form_rest(form) }}
        </div>

        <div id="loader" class="loader pull-right"></div>
        <button id="contact_submit" class="btn btn-warning pull-right" type="submit">Send via jQ <span class="glyphicon glyphicon-send"></span></button>
        <button id="contact_submit_js" class="btn btn-warning pull-right" type="submit">Send via pure js <span class="glyphicon glyphicon-send"></span></button>

        {{ form_end(form) }}

    </div>
</div>
    